@model Movie
<div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="/img/@Model.ImageUrl" alt="@Model.Tilte" width="200" height="300"/>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Tilte</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">@Model.Director</p>
                    <p class="card-text">
                        <ul>
                            @foreach (string oyuncu in Model.Cast)
                            {
                                <li>@oyuncu</li>
                            }
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>